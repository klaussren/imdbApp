<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/textViewNumEpisodio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="5dp"
        android:text="1"
        android:textColor="@color/Negro"
        android:textSize="@dimen/texto_normal"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewNombreEpisodio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewNumEpisodio"
        android:layout_alignBottom="@+id/textViewNumEpisodio"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/textViewNumEpisodio"
        android:layout_toRightOf="@+id/textViewNumEpisodio"
        android:text="Episodio" />


</RelativeLayout>