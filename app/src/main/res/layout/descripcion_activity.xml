<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <ScrollView
        android:id="@+id/ScrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView

                    android:id="@+id/TextViewNombreSerieTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre: "
                    android:textColor="@color/Negro"
                    android:textSize="@dimen/texto_medio" />

                <TextView

                    android:id="@+id/TextViewNombreSerie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Game of Trhones "
                    android:textColor="@color/Negro"
                    android:textSize="@dimen/texto_medio" />


            </LinearLayout>



            <HorizontalScrollView
                android:id="@+id/horizotalScrollView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/button1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Butasdgfadgfasdgfaton" />

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Butsdfasdfaton" />

                </LinearLayout>
            </HorizontalScrollView>



        </LinearLayout>
    </ScrollView>

</LinearLayout>